= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :email
    = f.email_field :email
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :coach_id
    = f.collection_select :coach_id, User.all, :id, :first_name, :prompt => true 
    / - users_names = []
    / - User.all.each do |u|
    /   - users_names << [u.username,u.id]
    / - users_names.sort!
    / = f.select :coach_id, options_for_select(users_names)
  .actions
    = f.submit 'Save'
