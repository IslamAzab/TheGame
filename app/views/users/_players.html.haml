- players = @user.players
%p
  Number of players:
  = players.count
%table.table-striped
  %tr
    %th Name
    %th Title
    %th Average score
    %th Top score
    - if is_team
      %th
      %th
    - players.each do |p|
      %tr
        %td= link_to p.full_name, show_game_path(p)
        %td= p.title
        %td= p.average_score
        %td= p.top_score
        - if is_team
          %td= link_to 'Scoring Cards', update_player_scoring_cards_path(p)
          %td
            / Button to trigger modal
            = link_to 'Scoring cards modal', {},{"data-toggle" => "modal", :href => "#Modal_#{p.id}", :role => "button"}

            / Modal
            .modal.hide.fade{ :id => "Modal_#{p.id}","aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
              .modal-header
                = button_tag '',{:class => "close","aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} do
                  %i.icon-remove
                %h3#myModalLabel
                  Show of scoring cards for player :
                  = p.full_name
              .modal-body
                %p
                  = render 'popup_cards',:player => p
              .modal-footer
                %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Cancel
                %button.btn.btn-primary{:id => 'modal_submit'} Save