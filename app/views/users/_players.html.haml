- players = @user.players
- if players.any?
  %p
    Number of players:
    = players.count
  %table{:border => "1"}
    %tr
      %th First name
      %th Last name
      %th Title
      %th Average score
      %th Maximum score
      - players.each do |p|
        %tr
          %td= p.first_name
          %td= p.last_name
          %td= p.title
          %td= p.average_score
          %td= p.max_score