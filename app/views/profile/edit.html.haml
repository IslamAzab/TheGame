%h1 Profile#edit
%p Find me in app/views/profile/edit.html.haml

= form_for @user do |f|
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :email
    = f.email_field :email 
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'